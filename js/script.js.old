const sumarProducto=(codProducto, totalProductos)=>{
    const p1=6000
    const p2=10000
    const p3=4500
    if(codProducto==1){
        totalProductos+=p1
    } else if(codProducto==2){
        totalProductos+=p2
    } else{
        totalProductos+=p3
    }
    return totalProductos
}
const agregarProducto=(codProducto, stringProductos)=>{
    if(codProducto==1){
        stringProductos+=' Remera 9z 2022\n'
    } else if(codProducto==2){
        stringProductos+=' Campera de abrigo 9z\n'
    } else{
        stringProductos+=' Pantalon 9z\n'
    }
    return stringProductos
}
const calcularRecargo=(monto)=>{
    return (monto*1.20)
}
const calcularMontoEnCuotas=(cantCuotas, monto)=>{
    if(cantCuotas==1){
        return '3 cuotas de $'+monto/3
    } else if(cantCuotas==2){
        return '6 cuotas de $'+monto/6
    } else{
        return '12 cuotas de $'+(calcularRecargo(monto)/12)
    }
}
alert('Bienvenido a 9z Market! Estos son los productos que tenemos (numero entre parentesis es el codigo del producto): Remera 9z 2022 (1) - Campera de abrigo 9z (2) - Pantalon 9z (3)')
let totalProductos=0
let stringProductos=''
let codProducto=parseInt(prompt("Ingrese el producto que desea comprar: "))
while(codProducto>0 && codProducto<=3){
    totalProductos=sumarProducto(codProducto, totalProductos)
    stringProductos=agregarProducto(codProducto, stringProductos)
    codProducto=parseInt(prompt("Ingrese el producto que desea comprar: "))
}
console.log('Los productos que fueron seleccionados son:\n'+stringProductos)
let metodoPago=parseInt(prompt('Ingrese el metodo de pago (1: Efectivo - 2: Cuotas)'))
if(metodoPago==1){
    console.log('Monto a pagar: $'+totalProductos)
} else{
    let cantCuotas=parseInt(prompt('1--> 3 cuotas sin interes\n2--> 6 cuotas sin interes\n3--> 12 cuotas con recargo (20%)'))
    if(cantCuotas==1 || cantCuotas==2){
        console.log('Monto final: $'+totalProductos+' en '+calcularMontoEnCuotas(cantCuotas, totalProductos))
    } else{
        console.log('Monto final: $'+calcularRecargo(totalProductos)+' en '+calcularMontoEnCuotas(cantCuotas,totalProductos))
    }
}